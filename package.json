{
  "workspaces": [
    "scripts/*"
  ],
  "name": "pi-browser-extension",
  "description": "Script to recreate the Pi Browser app within a browser on your computer",
  "main": "index.js",
  "scripts": {
    "lint": "eslint scripts/ --ext=.ts",
    "lint:fix": "eslint scripts/ --ext=.ts --fix",
    "format:check": "prettier --check 'scripts/**/**.ts'",
    "format:write": "prettier --write 'scripts/**/**.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pinetwork-js/pi-browser-extension.git"
  },
  "author": "B-Derouet <brewal_derouet@hotmail.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pinetwork-js/pi-browser-extension/issues"
  },
  "homepage": "https://github.com/pinetwork-js/pi-browser-extension#readme",
  "packageManager": "yarn@3.6.0",
  "dependencies": {
    "@zero-dependency/dom": "^1.6.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "prettier": "^2.8.8",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "vite-userscript-plugin": "^1.8.1"
  }
}
